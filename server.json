{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.cvrt-jh/clickup-mcp",
  "description": "Lightweight ClickUp MCP server - 35 tools, token-optimized (95% smaller responses)",
  "repository": {
    "url": "https://github.com/cvrt-jh/clickup-mcp",
    "source": "github"
  },
  "version": "1.0.1",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@cavort-it-systems/clickup-mcp",
      "version": "1.0.1",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "ClickUp Personal API Token (Settings > Apps)",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "CLICKUP_API_TOKEN"
        }
      ]
    }
  ]
}
